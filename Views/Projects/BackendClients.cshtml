@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Backend Clients";
}
<div class="container-fuid mx-5 mt-5">
    @if (Model.Count() > 0)
    {
    <div class="row">
        <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-3">
            <a class="card back-card-s" asp-controller="Home" asp-action="Index" target="_self">
                <div class="card-body card-back">
                    <i class="bi bi-arrow-left-short"></i>Wróć
                </div>
            </a>
        </div>
        @foreach (var clientProject in Model)
        {
        <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-3">
            <a class="card project-card-s" asp-controller="Projects" asp-action="Backend" asp-route-id="@clientProject.Client.ClientId" target="_self">
                <div class="content">
                    <div class="card-image-top">
                        <i class="bi bi-folder2"></i>
                    </div>
                    <div class="card-body mt-2 pt-0">
                        <h6 class="card-title p-0 m-0 text-center">@clientProject.Client.Name</h6>
                        <small class="missing-text-light">Ilość Projektów :<span class="ms-1">@clientProject.ProjectCount</span></small>
                    </div>
                </div>
            </a>
        </div>
        }
    </div>
    }
else
{
    <p class="lead missing-text">Brak rekordów w bazie danych dla kategorii <span>Backend</span></p>
}
</div>
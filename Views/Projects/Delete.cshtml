@model PDFLines.Models.Project

@{
    ViewData["Title"] = "Usuwanie projektu";
    ViewData["Subtitle"] = "Usuwanie projektu";
}
<!-- go back button -->
<a class="btn btn-back" asp-action="Index" asp-route-pageNumber="@ViewBag.PageNumber">
    <i class="bi bi-arrow-left-short me-1"></i>Wróć
</a>
<!-- Delete form -->
<div class="container my-4">
    <h1>@ViewData["Subtitle"]</h1>
    <hr class="title-line"/>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ClientId)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Clients.Name)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Type)</dt>
        @switch (Model.Type)
        {
            case 1:
                <dd class="col-sm-10">SMT</dd>
                break;
            case 2:
                <dd class="col-sm-10">Non SMT</dd>
                break;
            case 3:
                <dd class="col-sm-10">Backend</dd>
                break;
            case 4:
                <dd class="col-sm-10">Fabrication</dd>
                break;
            case 5:
                <dd class="col-sm-10">Integration</dd>
                break;
            case 6:
                <dd class="col-sm-10">Welding</dd>
                break;
            case 7:
                <dd class="col-sm-10">Stamping</dd>
                break;
            case 8:
                <dd class="col-sm-10">Paintshop</dd>
                break;
        }
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.FileName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FileName)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.FileLocation)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FileLocation)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Active)</dt>
        <dd class="col-sm-10">@(Model.Active == true ? "Tak":"Nie")</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Order)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Order)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.UserId)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Users.NameSurname)</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProjectId" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
    </form>
</div>